<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="admetrics" translate="label" showInDefault="0" showInWebsite="0" showInStore="1">
            <tab>service</tab>
            <label>Admetrics Data Studio</label>
            <resource>Admetrics_Magento::tracking_config</resource>
            <group id="tracking" translate="label" type="text" showInDefault="0" showInWebsite="0" showInStore="1">
                <label>Tracking</label>
                <field id="enabled" translate="label" type="select" showInDefault="0" showInWebsite="0" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="pixel" translate="label" type="textarea" showInDefault="0" showInWebsite="0" showInStore="1">
                    <label>Pixel</label>
                </field>
            </group>
        </section>
    </system>
</config>

